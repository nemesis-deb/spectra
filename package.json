{
  "name": "spectra",
  "version": "1.0.2",
  "description": "A beautiful audio visualizer app with multiple visualization modes and customization options.",
  "main": "main.js",
  "scripts": {
    "start": "electron . --no-sandbox",
    "start:quiet": "cross-env ELECTRON_ENABLE_LOGGING=0 electron . --no-sandbox",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux && cd dist && ./Spectra-1.0.2.AppImage --appimage-extract && cd ..",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": {
    "name": "Katuyo",
    "email": "eloi.tisserand@epitech.eu"
  },
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.spectra.app",
    "productName": "Spectra",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "index.html",
      "src/**/*",
      "package.json",
      "spk-icon.ico",
      "presets/**/*"
    ],
    "extraResources": [
      {
        "from": "spk-icon.ico",
        "to": "spk-icon.ico"
      },
      {
        "from": "presets",
        "to": "presets"
      }
    ],
    "fileAssociations": [
      {
        "ext": "spk",
        "name": "Spectra Preset",
        "description": "Spectra Visualizer Preset File",
        "icon": "spk-icon.ico",
        "role": "Editor"
      }
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "build/icon.icns",
      "category": "public.app-category.music"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "build/icon.png",
      "category": "Audio"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "dependencies": {
    "@distube/ytdl-core": "^4.16.12",
    "@electron/remote": "^2.1.3",
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "discord-rpc": "^4.0.1",
    "fluent-ffmpeg": "^2.1.3",
    "jsmediatags": "^3.9.7",
    "node-id3": "^0.2.9",
    "play-dl": "^1.9.7",
    "spotify-web-api-node": "^5.0.2",
    "three": "^0.181.2",
    "web-audio-beat-detector": "^8.2.31",
    "youtube-dl-exec": "^3.0.27",
    "yt-search": "^2.13.1"
  }
}